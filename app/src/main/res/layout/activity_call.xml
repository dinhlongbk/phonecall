<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CallActivity">

        <EditText
            android:id="@+id/number11"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:inputType="phone"
            android:digits="0123456789+"
            android:text="0936089126"/>
        <Button
            android:id="@+id/addNumber11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number11"
            android:text="add"/>
        <Button
            android:id="@+id/removeNumber11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addNumber11"
            android:text="Remove"/>
        <Button
            android:id="@+id/holdNumber11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/removeNumber11"
            android:text="Hold"/>

        <EditText
            android:id="@+id/number2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/number11"
            android:inputType="phone"
            android:digits="0123456789+"
            android:text="0825789699"/>

        <Button
            android:id="@+id/addNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            app:layout_constraintStart_toStartOf="@id/number2"
            app:layout_constraintTop_toBottomOf="@+id/number2" />
        <Button
            android:id="@+id/removeNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/addNumber2"
            app:layout_constraintTop_toBottomOf="@+id/addNumber2"
            android:text="Remove"/>
        <Button
            android:id="@+id/holdNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/removeNumber2"
            app:layout_constraintTop_toBottomOf="@+id/removeNumber2"
            android:text="Hold"/>


        <EditText
            android:id="@+id/number3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/number2"
            android:inputType="phone"
            android:digits="0123456789+"
            android:text="18008198"/>

        <Button
            android:id="@+id/addNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            app:layout_constraintStart_toStartOf="@id/number3"
            app:layout_constraintTop_toBottomOf="@+id/number3" />
        <Button
            android:id="@+id/removeNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/addNumber3"
            app:layout_constraintTop_toBottomOf="@+id/addNumber3"
            android:text="Remove"/>
        <Button
            android:id="@+id/holdNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/removeNumber3"
            app:layout_constraintTop_toBottomOf="@+id/removeNumber3"
            android:text="Hold"/>

        <Button
            android:id="@+id/mergeCall"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holdNumber11"
            android:text="Merge"/>
        <Button
            android:id="@+id/holdCall"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mergeCall"
            android:text="Hold"/>
        <Button
            android:id="@+id/endCall"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holdCall"
            android:text="End"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>